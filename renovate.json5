{
  "enabled": true,
  "semanticCommits": "disabled",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "automerge": true,
  "ignoreTests": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".+\\.ya?ml$"],
      "matchStrings": [
        "- (?<packageName>.*?)=(?<currentValue>.*) # repo=(?<repo>.*?)"
      ],
      "datasourceTemplate": "custom.{{{repo}}}",
      "versioningTemplate": "loose"
    }
  ],
  "customDatasources": {
    "wolfi": {
      "defaultRegistryUrlTemplate": "http://apk-wolfi:3000/{{packageName}}"
    },
    "alpine-main": {
      "defaultRegistryUrlTemplate": "http://apk-main:3000/{{packageName}}"
    },
    "alpine-community": {
      "defaultRegistryUrlTemplate": "http://apk-community:3000/{{packageName}}"
    },
    "alpine-testing": {
      "defaultRegistryUrlTemplate": "http://apk-testing:3000/{{packageName}}"
    }
  }
}
