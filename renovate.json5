{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":automergeAll",
    ":skipStatusChecks",
    ":disableRateLimiting",
  ],
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/.+\\.ya?ml$/"],
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "include: (?<repo>[\\w-]+)\\.ya?ml",
        "- (?<depName>.+?)=(?<currentValue>.+)"
      ],
      "datasourceTemplate": "custom.{{#if repo}}{{repo}}{{else}}wolfi-base{{/if}}",
      "versioningTemplate": "loose"
    }
  ],
  "customDatasources": {
    "wolfi-base": {
      "defaultRegistryUrlTemplate": "http://apk-wolfi:3000/{{packageName}}"
    },
    "alpine-base": {
      "defaultRegistryUrlTemplate": "http://apk-alpine:3000/{{packageName}}"
    },
    "bootc": {
      "defaultRegistryUrlTemplate": "http://apk-wolfi:3000/{{packageName}}"
    },
    "": {
      "defaultRegistryUrlTemplate": "http://apk-wolfi:3000/{{packageName}}"
    },
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.wolfi-base"],
      "groupName": "wolfi-packages",
    },
    {
      "matchDatasources": ["custom.alpine-base"],
      "groupName": "alpine-packages",
    },
    {
      "matchPackageNames": ["kubectl"],
      "extractVersion": "^([0-9]+\\.[0-9]+)",
    }
  ]
}
